<div class="container-fluid my-4">
  <div class="row">
    <!-- Sidebar / Patient Profile -->

    <div class="col-md-3 pe-0"> <!-- removed right padding to push card left -->
      <div class="card shadow-sm border-0 rounded-4" style="margin-left: -10px;"> <!-- nudged left -->
        <div class="card-body text-center p-4">
          <!-- Profile Avatar -->
          <div class="mb-3">
          <div class="ms-3">
          <% user = User.find_by(userable_id: current_user.userable.id, userable_type: "Patient") %>
            <%= image_tag(user.gender == "male" ? "man.avif" : "women.avif", 
                          class: "rounded-circle", 
                          style: "width:100px; height:100px; object-fit:cover;") %>
          </div>
            <i class="bi bi-person-circle text-secondary" style="font-size: 5rem;"></i>
          </div>
          <h4 class="fw-bold mb-2"><%= user&.name || "N/A" %></h4>
          <p class="text-muted fs-5 mb-1"><%= user&.email || "N/A" %></p>
          <p class="text-muted fs-5"><%= user&.phone_no || "N/A" %></p>
           <%= link_to edit_patient_path(@patient), class: "btn btn-warning w-100 mt-3" do %>
            <i class="bi bi-pencil-fill me-1"></i> Edit Profile
          <% end %>
          <hr>
          <div>
          </div>
          <%= link_to "View Doctors", patients_path,
                        class: "btn btn-primary w-100 mt-3 fs-5 py-2" %>
        </div>
      </div>
    </div>
     

    <!-- Main Content -->
    <div class="col-md-9 ps-3">
      <!-- Appointments Section -->
      <div class="card shadow-sm border-0 rounded-4 mb-4">
        <div class="card-header bg-light rounded-top-4 py-3">
          <h4 class="fw-bold mb-0 text-primary">
            <i class="bi bi-calendar-check me-2"></i> Your Appointments
            <div class="container-fluid px-3 my-2">
       
         <% if current_user.present? %>
            <%= link_to "← view confirmed appointments", confirmed_patient_path(current_user.userable.id),class: "btn btn-outline-secondary px-2 py-2 fs-7 rounded-3 shadow-sm fw-semibold" %>
         <% end %>
     
    </div>
          </h4>
        </div>
        <div class="card-body fs-5">
          <% if @appointments.any? %>
            <div class="table-responsive">
              <table class="table table-striped align-middle fs-5">
                <thead class="table-light">
                  <tr>
                    <th class="py-3">Date</th>
                    <th class="py-3">Time</th>
                    <th class="py-3">Status</th>
                    <th class="py-3">Doctor</th>
                    <th class="py-3">View</th>
                  </tr>
                </thead>
                <tbody>
                  <% @appointments.each do |appointment| %>
                    <% doctor = Doctor.find(appointment.doctor_id) rescue nil %>
    
                    <% if appointment.status == "pending" || appointment.status == "canceled" %>
                    <tr>
                      
                      <td class="py-3"><%= appointment.scheduled_at&.strftime("%Y-%m-%d") %></td>
                      <td class="py-3"><%= appointment.scheduled_at&.strftime("%I:%M %p") || "N/A" %></td>
                      <td class="py-3">
                        <% status_class = {
                          "pending" => "warning",
                          "confirmed" => "success",
                          "canceled" => "danger"
                        }[appointment.status] || "secondary" %>
                       <% if appointment.scheduled_at < Date.today %>
                          <span class= "badge bg-danger"> appointment expired </span>
                        <% else %>
                        <span class="badge bg-<%= status_class %> fs-6 px-3 py-2">
                          <%= appointment.status.capitalize %>
                        </span>
                        <% end %>
                      </td>
                      <td class="py-3"><%= doctor.user.name || "N/A" %></td>
                      <td> <%= link_to "View Appointment",
                        appointment_path(appointment.id),
                        class: "btn btn-outline-primary btn-sm fs-6 px-4 py-2" %>
                      </td>
                    </tr>
                  <% end %>
                  <% end %>
                </tbody>
              </table>
            </div>
          <% else %>
            <p class="text-muted fs-5">You have no appointments booked.</p>
          <% end %>
        </div>
      </div>

      <!-- Bills Section -->
    <div class="card shadow-sm border-0 rounded-4">
  <div class="card-header bg-light rounded-top-4 py-3">
    <h4 class="fw-bold mb-0 text-primary">
      <i class="bi bi-receipt-cutoff me-2"></i> Your Bills
    </h4>
  </div>
  <div class="card-body fs-5">
    <% if @bills.any? %>
      <div class="table-responsive">
        <table class="table table-striped align-middle fs-5">
          <thead class="table-light">
            <tr>
              <th class="py-3">Date</th>
              <th class="py-3">Total</th>
              <th class="py-3">Paid</th>
              <th class="py-3">Status</th>
              <th class="py-3">Payment</th>
              <th class="py-3"> History </th>
            </tr>
          </thead>
          <tbody>
            <% @bills.each do |bill| %>
              <% appointment = bill.appointment %>
              <% payment = Payment.find_by(bill_id: bill.id) %>
              <tr>
                <td class="py-3"><%= appointment.scheduled_at.strftime("%B %d, %Y") %></td>
                <td class="py-3">$<%= bill.tot_amount %></td>
                <td class="py-3">$<%= bill.paid_amount %></td>
                <td class="py-3">
                  <% if payment.present? %>
                    <span class="badge fs-6 px-3 py-2
                      <%= case payment.status
                            when "pending" then "bg-warning text-dark"
                            when "paid" then "bg-success"
                            when "un_paid" then "bg-danger"
                            else "bg-info text-dark"
                          end %>">
                      <%= payment.status %>
                    </span>
                  <% else %>
                    <span class="badge bg-secondary fs-6 px-3 py-2">un_paid</span>
                  <% end %>
                </td>
                <td class="py-3">
                  <% remaining_amount = bill.tot_amount - bill.paid_amount %>
                   <% if appointment.scheduled_at < Date.today %>
                    <span> appointment expired </span>
                  <% elsif remaining_amount > 0 %>
                    <%= link_to "Pay Bill",
                        new_payment_path(bill_id: bill.id, patient_id: @patient.id),
                        class: "btn btn-outline-primary btn-sm fs-6 px-4 py-2" %>
                  <% else %>
                    <span>  ✅ </span>
                  <% end %>
                </td>
                <td class="py-3">
                    <%= link_to "View history",
                        payment_path(bill_id: bill.id),
                        class: "btn btn-outline-primary btn-sm fs-6 px-4 py-2" %>
                </td>
               
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    <% else %>
      <p class="text-muted fs-5">No bills assigned yet.</p>
    <% end %>
  </div>
</div>



