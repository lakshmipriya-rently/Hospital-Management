<div class="container my-5">
  <div class="row">
    <!-- Patient Info -->
    <div class="col-md-4">
      <div class="card rounded-4 shadow-lg border-0">
        <div class="card-header bg-primary text-white rounded-top-4">
          <h4 class="mb-0">Your Details</h4>
        </div>
        <div class="card-body">
        <% user = User.find_by(userable_id: @patient.id, userable_type: "Patient") %>
       <p><strong>Name:</strong> <%= user&.name || "N/A" %></p>
       <p><strong>Name:</strong> <%= user&.phone_no || "N/A" %></p>
       <p><strong>Name:</strong> <%= @patient.disease || "N/A" %></p>

        </div>
      </div>
    </div>

    <!-- Appointments List -->
    <div class="col-md-8">
      <h3 class="mb-4">Your Appointments</h3>

      <% if @appointments.any? %>
        <div class="list-group">
          <% @appointments.each do |appointment| %>
            <% status_class = {
              "pending" => "warning",
              "confirmed" => "success",
              "canceled" => "danger"
            }[appointment.status] || "secondary" %>

            <a href="<%= appointment_path(appointment) %>" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center rounded-4 mb-3 shadow-sm">
              <div>
                <strong>Date:</strong> <%= appointment.appointment_date.strftime("%B %d, %Y") %> at <%= appointment.appointment_time&.strftime("%I:%M %p") || "N/A" %>
              </div>
              <span class="badge bg-<%= status_class %> rounded-pill text-uppercase">
                <%= appointment.status %>
              </span>
            </a>
          <% end %>
        </div>
      <% else %>
        <p>You have no appointments booked.</p>
      <% end %>
      <!-- Bills List -->
<h3 class="mt-5 mb-4">Your Bills</h3>

<% if @bills.any? %>
  <div class="list-group">
    <% @bills.each do |bill| %>
      <% appointment = bill.appointment %>
      <div class="list-group-item rounded-4 mb-3 shadow-sm">
        <p><strong>Appointment Date:</strong> <%= appointment.appointment_date.strftime("%B %d, %Y") %></p>
        <p><strong>Total Amount:</strong> $<%= bill.tot_amount %></p>
        <p><strong>Paid Amount:</strong> $<%= bill.paid_amount %></p>
        <p><strong>Status:</strong> 
          <% if bill.is_assigned %>
            <span class="badge bg-success">Assigned</span>
          <% else %>
            <span class="badge bg-secondary">Not Assigned</span>
          <% end %>
        </p>
        <% payment = Payment.find_by(bill_id: bill.id) %>
        <%= payment&.status%>
         
        <%= link_to "Pay Bill", new_payment_path(bill_id: bill.id,patient_id: @patient.id), class: "btn btn-outline-primary btn-sm mt-2" %>
      </div>
    <% end %>
  </div>
<% else %>
  <p>No bills assigned yet.</p>
<% end %>

