<div class="container mt-5 mb-4">
  <h2 class="fw-bold mb-3 text-center text-primary">üè• Hospital Management</h2>
  <h4 class="text-center text-secondary mb-5">Appointment Details</h4>

  <div class="row justify-content-center">
    <div class="col-md-8">
      <% status_class =
        case @appointment.status
        when "Confirmed" then "card-confirmed"
        when "Completed" then "card-completed"
        when "Cancelled" then "card-cancelled"
        else "card-pending"
        end
      %>

      <div class="card appointment-card <%= status_class %> shadow-sm border-0 rounded-4 p-4 mb-4">
        <div class="d-flex justify-content-between align-items-center mb-3">
          <h5 class="fw-bold text-dark mb-0">Appointment no: <%= @appointment.id %></h5>
          <span class="badge px-3 py-2 fs-6">
            <%= @appointment.status.capitalize %>
          </span>
        </div>

        <hr class="my-2">

        <div class="mb-3">
          <h6 class="text-secondary fw-semibold">Patient</h6>
          <p class="mb-0 text-dark fs-6"><%= @appointment.patient.user.name %></p>
        </div>

        <div class="mb-3">
          <h6 class="text-secondary fw-semibold">Doctor</h6>
          <p class="mb-0 text-dark fs-6"><%= @appointment.doctor.user.name %></p>
        </div>

        <div class="mb-3">
          <h6 class="text-secondary fw-semibold">Scheduled Date</h6>
          <p class="mb-0 text-dark fs-6"><%= @appointment.scheduled_at.strftime("%d %B %Y, %I:%M %p") %></p>
        </div>

        <div class="mb-3">
          <h6 class="text-secondary fw-semibold">Purpose / Notes</h6>
          <p class="mb-0 text-dark fs-6"><%= @appointment.disease.presence || "No notes provided" %></p>
        </div>

        <% if @appointment.bill.present? %>
          <hr class="my-3">
          <div class="mb-2">
            <h6 class="text-secondary fw-semibold">Bill Summary</h6>
            <div class="d-flex justify-content-between">
              <span>Total Amount:</span>
              <strong><%= number_to_currency(@appointment.bill.tot_amount) %></strong>
            </div>
            <div class="d-flex justify-content-between">
              <span>Paid Amount:</span>
              <strong class="text-success"><%= number_to_currency(@appointment.bill.paid_amount) %></strong>
            </div>
            <div class="d-flex justify-content-between">
              <span>Remaining:</span>
              <strong class="text-danger"><%= number_to_currency(@appointment.bill.tot_amount - @appointment.bill.paid_amount) %></strong>
            </div>
          </div>
        <% end %>
      </div>

      <div class="text-center">
        <%= link_to "Back to Appointments", patients_path, class: "btn btn-outline-primary rounded-pill px-4 py-2" %>
      </div>
    </div>
  </div>

  <footer class="text-center mt-4 text-muted small">
    ¬© 2025 Hospital Management. All rights reserved.
  </footer>
</div>
<style>

body {
  background-color: #f8f9fa;
}

.appointment-card {
  transition: transform 0.2s ease, box-shadow 0.3s ease;
}

.appointment-card:hover {
  transform: scale(1.02);
  box-shadow: 0 6px 24px rgba(0, 0, 0, 0.1);
}


.card-confirmed {
  background: linear-gradient(90deg,rgba(38, 170, 222, 1) 0%, rgba(47, 245, 99, 0.78) 0%, rgba(237, 221, 83, 1) 100%);
  border-left: 5px solid #0d6efd;
}

.card-completed {
  background: linear-gradient(135deg, #d8f8e4 0%, #f1fff6 100%);
  border-left: 5px solid #28a745;
}

.card-pending {
  background: linear-gradient(135deg, #fff5d1 0%, #fffbea 100%);
  border-left: 5px solid #ffc107;
}

.card-cancelled {
  background: linear-gradient(135deg, #ffe5e5 0%, #fff1f1 100%);
  border-left: 5px solid #dc3545;
}


h6 {
  font-size: 0.9rem;
  text-transform: uppercase;
  letter-spacing: 0.5px;
}

.appointment-card p {
  font-size: 1rem;
}

</style>