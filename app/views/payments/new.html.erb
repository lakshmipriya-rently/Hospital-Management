<div class="form-style">
<%= form_with model: @payment, url: payments_path(bill_id: @bill.id, patient_id: @patient_id), local: true do |form| %>
  <% if @payment.errors.any? %>
    <div class="alert alert-danger">
      <ul>
        <% @payment.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <h1 class="text-center my-5 display-4 fw-bold text-primary border-bottom pb-3"> Payment </h1>
  <%= form.hidden_field :bill_id, value: @bill.id %>

  <div class="mb-3">
    <%= form.label :payment_method, class: "form-label" %>
    <%= form.select :payment_method, ['GPay','UPI','Paytm'],
      { prompt: 'Select your payment method' },
      { class: "form-select" } %>
  </div>

  <div class="mb-3">
    <%= form.label :amount_to_be_paid, class: "form-label" %>
    <%= form.number_field :amount_to_be_paid, class: "form-control" %>
  </div>

  <%= form.submit "Pay", class: "btn btn-primary w-100 mt-3" %>
<% end %>
</div>
<style>
   .form-style{
      width: 50%;
      margin-left: 25%;
      box-shadow: 10px 10px 10px 15px rgba(0.1, 0.1, 0.1, 0.1);
      padding: 4rem;

   }
</style>
