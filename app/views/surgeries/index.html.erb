<div class="surgeries-container">
  <h1>Surgeries Available</h1>

  <div class="d-flex flex-row flex-nowrap overflow-auto gap-3 py-3">
    <% @surgeries.each do |surgery| %>
      <div class="card surgery-card text-center flex-shrink-0">
        <%= image_tag "surgery.webp", class: "img-fluid rounded mb-2", style: "max-width: 180px; height: auto;" %>
        <h4 class="surgery-name"><%= surgery.name %></h4>
        <p class="surgery-doctor">Doctor: <%= surgery.doctor.user.name %></p>

        <div class="btn-group mt-2">
          <% if user_signed_in? && current_user.userable_type == "Patient" %>
            <%= button_to "Book Appointment", book_appointment_surgery_path(surgery), method: :post, class: "btn btn-primary btn-sm" %>
          <% elsif user_signed_in? && current_user.userable_type == "Doctor" %>
            <%= link_to "View Surgery", surgery_path(surgery), class: "btn btn-secondary btn-sm" %>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>


<style>
/* Surgeries Page Container */
.surgeries-container {
  padding: 2rem 1rem;
  background-color: #f4f7fa;
}

/* Page Heading */
.surgeries-container h1 {
  color: #3A9AD9;
  font-weight: 700;
  font-size: 2rem;
  text-align: center;
  margin-bottom: 2rem;
  border-bottom: 3px solid #3A9AD9;
  padding-bottom: 0.5rem;
}

/* Surgery Card */
.surgery-card {
  width: 300px; /* Compact width */
  background-color: #fff;
  border-radius: 1rem;
  box-shadow: 0 8px 20px rgba(0,0,0,0.08);
  transition: transform 0.3s ease, box-shadow 0.3s ease;
  padding: 1rem;
}

.surgery-card:hover {
  transform: translateY(-5px);
  box-shadow: 0 12px 25px rgba(0,0,0,0.15);
}

/* Surgery Image */
.surgery-card img {
  max-width: 100%;
  height: auto;
  margin-left: 2rem;
  border-radius: 0.5rem;
  margin-bottom: 0.8rem;
}

/* Surgery Name */
.surgery-name {
  font-size: 1.1rem;
  font-weight: 600;
  color: #16596d;
  margin-bottom: 0.5rem;
}

/* Doctor Name */
.surgery-doctor {
  font-size: 0.9rem;
  color: #495057;
  margin-bottom: 0.8rem;
}

/* Buttons */
.btn-group {
  display: flex;
  justify-content: center;
  gap: 0.5rem;
  flex-wrap: wrap;
}

.btn-primary, .btn-secondary {
  font-size: 0.8rem;
  padding: 0.3rem 0.6rem;
  border-radius: 0.5rem;
}

.btn-primary:hover {
  background-color: #007BBA;
}

.btn-secondary:hover {
  background-color: #5a6268;
}

/* Horizontal scroll styling */
.d-flex.overflow-auto::-webkit-scrollbar {
  height: 6px;
}

.d-flex.overflow-auto::-webkit-scrollbar-thumb {
  background: rgba(58,154,217,0.6);
  border-radius: 3px;
}

</style>